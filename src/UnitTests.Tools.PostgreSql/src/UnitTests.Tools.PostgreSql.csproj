<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <Version>1.0.2</Version>
    <LangVersion>8.0</LangVersion>
    <Nullable>enable</Nullable>
    <PackageProjectUrl>https://gitlab.com/fusonic/devops/dotnet/extensions</PackageProjectUrl>
    <Authors>Fusonic</Authors>
    <Company>Fusonic GmbH</Company>
    <Description>Tools for creating template DBs and cleaning them up using PostgreSql.</Description>
    <AssemblyName>Fusonic.Extensions.UnitTests.Tools.PostgreSql</AssemblyName>
    <RootNamespace>Fusonic.Extensions.UnitTests.Tools.PostgreSql</RootNamespace>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
    <NoWarn>1701;1702;1591</NoWarn>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>pgtestutil</ToolCommandName>

  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.6.0" />
    <PackageReference Include="Npgsql.EntityFrameworkCore.PostgreSQL" Version="2.2.4" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\UnitTests.Adapters.PostgreSql\src\UnitTests.Adapters.PostgreSql.csproj" />
  </ItemGroup>

</Project>
