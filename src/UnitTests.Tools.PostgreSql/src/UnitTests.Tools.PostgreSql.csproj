<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <PackageProjectUrl>https://github.com/fusonic/dotnet-extensions</PackageProjectUrl>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <Description>Tools for creating template DBs and cleaning them up using PostgreSql.</Description>
        <AssemblyName>Fusonic.Extensions.UnitTests.Tools.PostgreSql</AssemblyName>
        <RootNamespace>Fusonic.Extensions.UnitTests.Tools.PostgreSql</RootNamespace>
        <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
        <PackAsTool>true</PackAsTool>
        <IsPackable>true</IsPackable>
        <ToolCommandName>pgtestutil</ToolCommandName>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="CommandLineParser" Version="2.8.0" />
        <PackageReference Include="Microsoft.Extensions.DependencyModel" Version="5.0.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\UnitTests.Adapters.PostgreSql\src\UnitTests.Adapters.PostgreSql.csproj" />
    </ItemGroup>

</Project>
