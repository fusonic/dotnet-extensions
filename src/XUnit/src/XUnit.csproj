<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <AssemblyName>Fusonic.Extensions.XUnit</AssemblyName>
    <RootNamespace>Fusonic.Extensions.XUnit</RootNamespace>
    <PackageProjectUrl>https://github.com/fusonic/dotnet-extensions</PackageProjectUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <Description>Extensions to XUnit. Provides an own framework adding capabilities like a test context and attributes running before a test class gets instantiated.</Description>
    <IsTestProject>false</IsTestProject>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="7.0.0-preview.5.22301.12" />
    <PackageReference Include="xunit" Version="2.4.1" />
  </ItemGroup>
</Project>